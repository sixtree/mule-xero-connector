<?xml version="1.0" encoding="UTF-8"?>

<namespace xmlns="http://www.mulesoft.org/schema/mule/tooling.attributes" xmlns:mule="http://www.mulesoft.org/schema/mule/core" prefix="xero" url="http://www.mulesoft.org/schema/mule/xero">
  <global-cloud-connector extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" image="icons/large/xero-connector-48x32.png" localId="config" icon="icons/small/xero-connector-24x16.png" description="Global Xero configuration information." caption="Xero">
    <attribute-category description="Xero configuration properties." caption="General">
      <group caption="Generic" id="xeroGenericProperties">
        <name required="true" description="Give a name to this configuration so it can be later referenced by config-ref." caption="Name" name="name"></name>
      </group>
      <group caption="Connection" id="connection"></group>
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="Configurable." caption="Consumer Key" name="consumerKey"></string>
        <string javaType="java.lang.String" required="true" description="Configurable." caption="Consumer Secret" name="consumerSecret"></string>
        <string javaType="java.lang.String" required="true" description="Configurable." caption="Private Key Loc" name="privateKeyLoc"></string>
        <string defaultValue="https://api.xero.com/api.xro/2.0/" javaType="java.lang.String" required="false" description="Configurable." caption="Xero Api U R L" name="xeroApiURL"></string>
      </group>
    </attribute-category>
  </global-cloud-connector>
  <cloud-connector extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" image="icons/large/xero-connector-48x32.png" localId="xero-connector" icon="icons/small/xero-connector-24x16.png" description="Cloud Connector." caption="Xero" aliasId="org.mule.tooling.ui.modules.core.pattern.xero">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="xeroConnectorGeneric">
        <modeSwitch description="Operation." caption="Operation" name="Xero operations to execute">
          <mode modeLabel="Create" modeId="http://www.mulesoft.org/schema/mule/xero/create"></mode>
          <mode modeLabel="Get account" modeId="http://www.mulesoft.org/schema/mule/xero/get-account"></mode>
          <mode modeLabel="Get accounts list" modeId="http://www.mulesoft.org/schema/mule/xero/get-accounts-list"></mode>
          <mode modeLabel="Get invoice" modeId="http://www.mulesoft.org/schema/mule/xero/get-invoice"></mode>
          <mode modeLabel="Get invoices list" modeId="http://www.mulesoft.org/schema/mule/xero/get-invoices-list"></mode>
        </modeSwitch>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector abstract="true" image="icons/large/xero-connector-48x32.png" localId="abstractXeroConnectorGeneric" icon="icons/small/xero-connector-24x16.png" description="Interact with Xero." caption="Abstractxeroconnectorgeneric">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="abstractXeroConnectorGeneric">
        <globalRef requiredType="http://www.mulesoft.org/schema/mule/xero/config" required="true" description="Specify which configuration to use for this invocation." caption="Config Reference" name="config-ref"></globalRef>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" abstract="true" image="icons/large/xero-connector-48x32.png" localId="get-accounts-list" icon="icons/small/xero-connector-24x16.png" caption="Get Accounts List">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="false" description="Filter string used to filter query results from Xero." caption="Filter String" name="filterString"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Xero connector."></label>
        <label caption=""></label>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" abstract="true" image="icons/large/xero-connector-48x32.png" localId="get-account" icon="icons/small/xero-connector-24x16.png" caption="Get Account">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="A unique Xero account id." caption="Account Id" name="accountId"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Xero connector."></label>
        <label caption=""></label>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" abstract="true" image="icons/large/xero-connector-48x32.png" localId="get-invoices-list" icon="icons/small/xero-connector-24x16.png" caption="Get Invoices List">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="false" description="Filter string used to filter query results from Xero." caption="Filter String" name="filterString"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Xero connector."></label>
        <label caption=""></label>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" abstract="true" image="icons/large/xero-connector-48x32.png" localId="get-invoice" icon="icons/small/xero-connector-24x16.png" caption="Get Invoice">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="A unique Xero invoice id." caption="Invoice Id" name="invoiceId"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Xero connector."></label>
        <label caption=""></label>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/xero/abstractXeroConnectorGeneric" abstract="true" image="icons/large/xero-connector-48x32.png" localId="create" icon="icons/small/xero-connector-24x16.png" caption="Create">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="The content of the object to be created in Xero." caption="Payload" name="payload"></string>
        <enum allowsCustom="true" javaType="org.mule.module.xero.XeroObjectTypes.XeroPostTypes" required="true" supportsExpressions="true" description="The type of object to be created in Xero." caption="Object Type" name="objectType">
          <option value="BankTransactions"></option>
          <option value="Contacts"></option>
          <option value="CreditNotes"></option>
          <option value="Employees"></option>
          <option value="ExpenseClaims"></option>
          <option value="Invoices"></option>
          <option value="Items"></option>
          <option value="ManualJournals"></option>
          <option value="Receipts"></option>
        </enum>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Xero connector."></label>
